#MIN_CONFIG(3.0.0)

AM_INIT_AUTOMAKE(ktoshiba, 0.8)
AC_C_BIGENDIAN
AC_CHECK_KDEMAXPATHLEN

AC_ARG_ENABLE(powersave, [  --enable-powersave      build with powersave daemon support],enable_powersave=$enableval,enable_powersave=auto)

if test x$enable_powersave = xyes; then
    # check for pkg-config
    AC_CHECK_PROG(PKGCONFIG, [pkg-config], [pkg-config], [])
    pkg_modules="dbus-1 >= 0.33"
    PKG_CHECK_MODULES(DBUS, [$pkg_modules])
    AC_DEFINE([ENABLE_POWERSAVE],1,[Adds powersave daemon support])
    POWERSAVE_LIBS="-lpowersave -lpowersave_dbus"
fi

AM_CONDITIONAL(ENABLE_POWERSAVE, test x$enable_powersave = "xyes")
AC_SUBST(DBUS_CFLAGS)
AC_SUBST(DBUS_LIBS)
AC_SUBST(POWERSAVE_LIBS)

AC_OUTPUT
